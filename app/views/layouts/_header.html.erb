<header class="sticky-top">
    <nav class="navbar navbar-expand-md">
      <div class="container">
        <strong>
          <%= link_to "GAME COMMUNITY", public_root_path %>
        </strong>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
              <li class="nav-item">
                <%= link_to new_public_recruitment_path do %>
                  <i class="fas fa-plus-square fa-lg"></i>募集投稿
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to favorites_public_customer_path(current_customer.id) do %>
                  <i class="fas fa-thumbs-up fa-lg"></i>いいね一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to public_customer_path(current_customer.id) do %>
                  <i class="fas fa-users fa-lg"></i>マイページ
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_customer_session_path, method: :delete do %>
                  <i class="fas fa-sign-out-alt fa-lg"></i>ログアウト
                <% end %>
              </li>
            <% elsif admin_signed_in? %>
              <li class="nav-item">
                <%= link_to admin_styles_path do %>
                  <i class="fas fa-walking fa-lg"></i>プレイスタイル
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_play_times_path do %>
                  <i class="fas fa-clock fa-lg"></i>プレイ時間
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_customers_path do %>
                  <i class="fas fa-users fa-lg"></i>顧客一覧
                <% end %>
