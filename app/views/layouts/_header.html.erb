              <li class="nav-item">
                <%= link_to destroy_admin_session_path, method: :delete do %>
                  <i class="fas fa-sign-out-alt fa-lg"></i>ログアウト
                <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to  new_customer_registration_path do %>
                  <i class="fas fa-user-plus fa-lg"></i>新規登録
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_customer_session_path do %>
                   <i class="fas fa-sign-in-alt fa-lg"></i>ログイン
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to customers_guest_sign_in_path, method: :post do %>
                  <i class="fas fa-key fa-lg"></i>ゲストログイン
                <% end %>
