<h2>プロフィール編集</h2>

<%= form_with model: @customer, url: public_customer_path(@customer.id), method: :patch do |f| %>
  <label for="inputName">氏名</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"氏名"%><br>
  <label for="inputImage">プロフィール画像</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
  <%= f.submit "変更を保存" %>
<% end %>