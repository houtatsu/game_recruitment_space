<div class="container">
	<div class="row">
		<div class="col-12 p-2 text-center">
			<h2>プレイスタイル追加・一覧</h2>
		</div>

		<%= form_with model: @style, url: admin_styles_path, method: :post do |f| %>
			<div class="row">
				<div class="col-8">
					<%= f.text_field :name %>
				</div>
				<div class="col-4">
					<%= f.submit "追加", class:"btn btn-primary btn-sm" %>
				</div>
			</div>
		<% end %>

		<div>
		  <% if @style.errors.any? %>
		    <%= @style.errors.count %>件のエラーが発生しました
		    <ul>
		      <% @style.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		    </ul>
		  <% end %>
		</div>
	</div>

	<div class="row">
		<div class="col-6 p-2">
			<table class="table">
				<thead>
					<tr>
						<th>#</th>
						<th>プレイスタイル</th>
					  <th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @styles.each do |style| %>
						<tr>
							<td><%= style.id %></td>
							<td><%= style.name %></td>
							<td><%= link_to "編集する", edit_admin_style_path(style.id), class:"btn btn-success btn-sm" %></td>
							<td><%= link_to "削除", admin_style_path(style.id), method: :delete, class:"btn btn-danger btn-sm" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
