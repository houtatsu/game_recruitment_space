<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center">管理者ログイン</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-12 p-5">
      <%= form_with model: @admin, url: admin_session_path, method: :post do |f| %>
        <div class="field text-center p-2">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field text-center p-2">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions text-center p-2">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>