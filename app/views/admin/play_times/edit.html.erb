<div class="container">
  <div class="row">
    <div class="col-12 p-3 text-center">
      <h2>プレイ時間編集画面</h2>
    </div>
  </div>
  <div class="col-12 text-center">
    <%= form_with model: @play_time, url: admin_play_time_path, method: :patch do |f| %>
      <label for="inputName">プレイ時間</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"プレイ時間" %>
      <%= f.submit '保存', class:"btn btn-info btn-sm" %>
    <% end %>
  </div>
</div>