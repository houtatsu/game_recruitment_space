<h2>プレイ時間一覧・追加</h2>

<%= form_with model: @play_time, url: admin_play_times_path, method: :post do |f| %>
  <h4>プレイ時間</h4>
  <%= f.text_field :name %>

  <%= f.submit '投稿', class:"btn btn-primary btn-sm" %>
<% end %>

<table>
	<thead>
		<tr>
			<th>プレイ時間</th>
		  <th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @play_times.each do |play_time| %>
			<tr>
				<td><%= play_time.name %></td>
				<td><%= link_to "編集する", edit_admin_play_time_path(play_time.id), class:"btn btn-success btn-sm" %></td>
				<td><%= link_to "削除", admin_play_time_path(play_time.id), method: :delete, class:"btn btn-danger btn-sm" %></td>
			</tr>
		<% end %>
	</tbody>
</table>