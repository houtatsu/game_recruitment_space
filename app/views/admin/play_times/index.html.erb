<div class="container">
	<%= render "admin/shared/flash" %>
	<div class="row">
		<div class="col-12 p-2 text-center">
			<h2>プレイ時間一覧・追加</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-12 p-3 text-center">
			<% if @play_time.errors.any? %>
			  <%= @play_time.errors.count %>件のエラーが発生しました
			    <% @play_time.errors.full_messages.each do |message| %>
			      <li><%= message %></li>
			    <% end %>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-12 p-3 text-center">
			<%= form_with model: @play_time, url: admin_play_times_path, method: :post do |f| %>
				<%= f.text_field :name, placeholder: "プレイ時間" %>
				<%= f.submit "追加", class:"btn btn-primary btn-sm" %>
			<% end %>
		</div>
	</div>

	<div class="row">
		<div class="col-6 p-2 mx-auto">
			<table class="table">
				<thead>
					<tr>
						<th>プレイ時間</th>
					  <th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @play_times.each do |play_time| %>
						<tr>
							<td><%= play_time.name %></td>
							<td><%= link_to "編集する", edit_admin_play_time_path(play_time.id), class:"btn btn-success btn-sm" %></td>
							<td><%= link_to "削除", admin_play_time_path(play_time.id), method: :delete, data: {confirm: "削除しますか？"}, class:"btn btn-danger btn-sm" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>